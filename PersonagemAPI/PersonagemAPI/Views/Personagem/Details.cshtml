@model PersonagemAPI.Models.Personagem

@{
    ViewBag.Title = "Details";
}

<h2>Personagem</h2>

<div class="card">
    <div class="card-header">
        <h4>Detalhes do @Model.Nome</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ID)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ID)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Sexo)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Sexo)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Classe)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Classe)
            </dd>
        </dl>
    </div>
</div>

<p class="mt-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.ID }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary" })
</p>
<style>
    h2 {
        font-weight: 500;
        font-family: "Nerko One", cursive;
        font-size: 55px;
        margin-top: 30px;
        color: #767ddd;
    }

    .btn {
        margin-top: 20px;
        margin-bottom: 10px;
        font-family: "Nerko One", cursive;
    }

    th {
        color: #767ddd;
        font-size: 20px;
        font-weight: 700;
        font-family: "Nerko One", cursive;
    }

    h4 {
        font-weight: 700;
        margin-top: -10px;
        font-family: "Nerko One", cursive;
        color: #d1751c;
        font-size: 35px;
    }

    .intro {
        margin-top: 20px;
    }
