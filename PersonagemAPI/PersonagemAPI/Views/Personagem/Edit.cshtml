@model PersonagemAPI.Models.Personagem

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Personagem</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sexo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Sexo, new List<SelectListItem>
                {
                    new SelectListItem { Text = "Masculino", Value = "Masculino" },
                    new SelectListItem { Text = "Feminino", Value = "Feminino" }
                }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Classe, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Classe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Classe, "", new { @class = "text-danger" })
            </div>
        </div>

     
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="save" class="btn btn-success me-2 mt-2 d-inline-block" />
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary d-inline-block mt-2" })
        </div>
    </div>
   
}
<style>
    h2 {
        color: #767ddd;
        font-weight: 500;
        font-family: "Nerko One", cursive;
        font-size: 55px;
        margin-top: 30px;
    }

    .btn {
        margin-top: 20px;
        margin-bottom: 10px;
        font-family: "Nerko One", cursive;
    }

    th {
        color: #767ddd;
        font-size: 20px;
        font-weight: 700;
        font-family: "Nerko One", cursive;
    }

    h4 {
        font-weight: 700;
        margin-top: -10px;
        font-family: "Nerko One", cursive;
        color: #d1751c;
        font-size: 35px;
    }

    .intro {
        margin-top: 20px;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
